package PracticeTask0316;

public class Computers {

	String OS;
	boolean mouse, keyboard;
	int screen, ram;

	public static void main(String[] args) {

		// ClassName variableName= new ClassName();
		// First computer
		Computer comp1 = new Computer();
		comp1.OS = "Windows";
		comp1.mouse = true;
		comp1.keyboard = true;
		comp1.screen = 2;
		comp1.ram = 16;

		System.out.println(comp1.mouse);
		
        // Second computer
		Computer comp2 = new Computer();
		comp2.OS = "MAC";
		comp2.mouse = true;
		comp2.keyboard = true;
		comp2.screen = 2;
		comp2.ram = 8;

	}
}
